<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Voting advices</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Actions</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="1">
										<numIndex index="0">
											Show spider chart
										</numIndex>
										<numIndex index="1">SpiderChart->index;</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">
											Show questionnaire
										</numIndex>
										<numIndex index="1">Question->index;</numIndex>
									</numIndex>
								</items>
								<size>1</size>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.elections>
						<TCEforms>
							<label>Related elections</label>
							<displayCond>FIELD:switchableControllerActions:=:Question->index;</displayCond>
							<config>
								<type>select</type>
								<foreign_table>tx_easyvotesmartvote_domain_model_election</foreign_table>
								<foreign_table_where>ORDER BY election_date DESC</foreign_table_where>
								<size>1</size>
								<minitems>1</minitems>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.elections>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>