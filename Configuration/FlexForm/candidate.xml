<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Candidate directory</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Actions</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="1">
										<numIndex index="0">
											Show filters
										</numIndex>
										<numIndex index="1">Candidate->filter;</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">
											Show candidate list
										</numIndex>
										<numIndex index="1">Candidate->index;</numIndex>
									</numIndex>
								</items>
								<size>1</size>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.election>
						<TCEforms>
							<label>Related election</label>
							<config>
								<type>select</type>
								<foreign_table>tx_easyvotesmartvote_domain_model_election</foreign_table>
								<foreign_table_where>ORDER BY election_date DESC</foreign_table_where>
								<size>1</size>
								<minitems>1</minitems>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.election>
					<settings.questionnairePid>
						<TCEforms>
							<label>Questionnaire page target</label>
							<displayCond>FIELD:switchableControllerActions:=:Candidate->index;</displayCond>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<minitems>0</minitems>
								<maxitems>1</maxitems>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.questionnairePid>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>